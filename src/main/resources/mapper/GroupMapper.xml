<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.kuangkuang.kuangkuang.mapper.GroupMapper">
    <select id="list"  resultType="com.kuangkuang.kuangkuang.pojo.entity.Group">
        select * from `group` where
        <if test="groups != null and groups.size() > 0">
        id IN
        <foreach collection="groups" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </if>
    </select>


</mapper>
